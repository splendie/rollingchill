generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  image       String
  category    String
  inStock     Boolean  @default(true)
  isNew       Boolean  @default(false)
  colors      String?
  sizes       String?
  materials   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
